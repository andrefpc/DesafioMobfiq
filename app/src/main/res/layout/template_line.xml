<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lineContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/item_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="left"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/circle_layout"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/product_discount_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="12dp"
                        android:text="0%"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="12dp"
                        android:text="OFF"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="right|center_vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/product_favorite_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_normal"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progress_bar_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/product_img_left"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="200dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/product_full_name_left"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/product_listPrice_left"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/product_price_left"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/product_installment_left"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:background="@drawable/item_background"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/circle_layout"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/product_discount_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:text="8%"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:text="OFF"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/product_favorite_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite_normal"/>

                </LinearLayout>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_bar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/product_img_right"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="200dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/product_full_name_right"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/product_listPrice_right"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/product_price_right"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/product_installment_right"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>